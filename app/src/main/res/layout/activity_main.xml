<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/full_screen_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="检查窗口权限"
        android:textSize="30dp" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/service_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_screen_check"
        android:layout_marginTop="20dp"
        android:text="检查服务权限"
        android:textSize="30dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_check"
        android:layout_marginTop="20dp"
        android:text="按钮大小"
        android:textSize="30dp" />


    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_check"
        android:layout_alignTop="@+id/size"
        android:layout_alignBottom="@+id/size"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/size"
        android:max="100"
        android:progress="50" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/double_click_fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek"
        android:layout_marginTop="20dp"
        android:text="双击"
        android:textSize="30dp" />

    <RadioGroup
        android:id="@+id/doubleRG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/double_click_fun"
        android:layout_toRightOf="@+id/double_click_fun"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/doubleRG_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回桌面" />

        <RadioButton
            android:id="@+id/doubleRG_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近期任务" />

        <RadioButton
            android:id="@+id/doubleRG_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无效" />
    </RadioGroup>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/long_click_fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/double_click_fun"
        android:layout_marginTop="20dp"
        android:text="长按"
        android:textSize="30dp" />

    <RadioGroup
        android:id="@+id/longRG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/long_click_fun"
        android:layout_toRightOf="@+id/long_click_fun"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/longRG_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回桌面" />

        <RadioButton
            android:id="@+id/longRG_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近期任务" />

        <RadioButton
            android:id="@+id/longRG_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无效" />
    </RadioGroup>

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="食用方法：轻触返回，长按桌面。"
        android:textSize="18dp" />


</RelativeLayout>
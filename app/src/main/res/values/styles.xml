<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="hintStyle">
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textSize">@dimen/hint_size</item>
    </style>

    <style name="functionStyle">
        <item name="android:textColor">@color/colorFun</item>
        <item name="android:textSize">@dimen/fun_size</item>
    </style>

</resources>
